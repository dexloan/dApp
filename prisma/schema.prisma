generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Collection {
  address           String          @id @unique
  mint              String          @unique
  authority         String
  disabled          Boolean         @default(false)
  floorPrice        BigInt
  loanBasisPoints   Int
  loanEnabled       Boolean
  optionBasisPoints Int
  optionEnabled     Boolean
  rentalBasisPoints Int
  rentalEnabled     Boolean
  CallOption        CallOption[]
  CallOptionBid     CallOptionBid[]
  Loan              Loan[]
  LoanOffer         LoanOffer[]
  Rental            Rental[]
}

model Loan {
  id                 Int        @unique @default(autoincrement())
  address            String
  state              LoanState
  borrower           String
  lender             String?
  amount             BigInt?
  basisPoints        Int
  creatorBasisPoints Int
  outstanding        BigInt
  threshold          Int?
  installments       Int
  noticeIssued       BigInt?
  duration           BigInt
  startDate          BigInt?
  mint               String
  tokenMint          String?
  collectionAddress  String
  currentInstallment Int
  Collection         Collection @relation(fields: [collectionAddress], references: [address])

  @@id([id, address])
}

model LoanOffer {
  id                Int        @unique @default(autoincrement())
  address           String
  offerId           Int
  lender            String
  amount            BigInt?
  basisPoints       Int
  duration          BigInt
  ltv               Int?
  threshold         Int?
  collectionAddress String
  Collection        Collection @relation(fields: [collectionAddress], references: [address])

  @@id([id, address, offerId])
}

model CallOption {
  id                 Int             @unique @default(autoincrement())
  address            String
  state              CallOptionState
  amount             BigInt
  creatorBasisPoints Int
  seller             String
  buyer              String?
  expiry             BigInt
  strikePrice        BigInt
  mint               String
  tokenMint          String?
  collectionAddress  String
  Collection         Collection      @relation(fields: [collectionAddress], references: [address])

  @@id([id, address])
}

model CallOptionBid {
  id                Int        @unique @default(autoincrement())
  address           String
  bidId             Int
  buyer             String
  expiry            BigInt
  strikePrice       BigInt
  amount            BigInt
  collectionAddress String
  Collection        Collection @relation(fields: [collectionAddress], references: [address])

  @@id([id, address, bidId])
}

model Rental {
  address            String      @id @unique
  state              RentalState
  amount             BigInt
  creatorBasisPoints Int
  lender             String
  borrower           String?
  expiry             BigInt
  currentStart       BigInt?
  currentExpiry      BigInt?
  escrowBalance      BigInt
  mint               String
  collectionAddress  String
  Collection         Collection  @relation(fields: [collectionAddress], references: [address])
}

enum LoanState {
  Unlisted
  Listed
  Active
  Defaulted
  Cancelled
  Repaid
}

enum CallOptionState {
  Listed
  Active
  Exercised
  Cancelled
}

enum RentalState {
  Listed
  Rented
  Cancelled
}
